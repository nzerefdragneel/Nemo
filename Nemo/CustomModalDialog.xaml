<UserControl x:Class="Nemo.CustomModalDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Nemo"
             mc:Ignorable="d" 
             BorderThickness="0"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">
    <Grid>
        <Border CornerRadius="10" BorderBrush="Black" BorderThickness="1" Background="White" Height="auto" Width="250" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Thành công!" FontWeight="Bold" HorizontalAlignment="Center"/>
                <materialDesign:PackIcon Grid.Row="1" Kind="CheckCircle" Foreground="#4ECB71" Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
