<Window x:Class="Nemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

        xmlns:local="clr-namespace:Nemo"
        mc:Ignorable="d"
        xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
         TextElement.Foreground="{DynamicResource TextBrush}"
         TextElement.FontWeight="Regular"
         TextElement.FontSize="13"
         TextOptions.TextFormattingMode="Ideal"
         TextOptions.TextRenderingMode="Auto"
          materialDesign:ButtonAssist.CornerRadius="50"
        
         Background="{DynamicResource PrimaryHueMidForegroundBrush}"
         Foreground="{DynamicResource PrimaryMidBrush}"
         FontFamily="{DynamicResource MaterialDesignFont}"
         Title="Media Player" Height="650" Width="1200"
         
        Loaded="Window_Loaded" Closed="Window_Closed">
    <Window.Resources>
        
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="7*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50px"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel Grid.ColumnSpan="2" Grid.Row="0" Background="{DynamicResource PrimaryLightBrush}">
            <TextBlock
              Style="{DynamicResource MaterialDesignHeadline5TextBlock}" VerticalAlignment="Center" Margin="28 0 0 0"
              Text="nemo" />
        </DockPanel>
        <materialDesign:Card Grid.ColumnSpan="2" Grid.Row="1" Background="{DynamicResource PrimaryLightForegroundBrush}">
            <Grid>
                <TabControl 
                TabStripPlacement="Left" >
                    <TabItem Width="300" 
                            Header="Danh mục phòng" >
                        <!--Content-->
                        <Grid  Background="{DynamicResource PrimaryHueMidForegroundBrush}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="70"></RowDefinition>
                                <RowDefinition Height="50"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="80"></RowDefinition>
                            </Grid.RowDefinitions>
                            <StackPanel Margin="100 20 100 0">
                                <TextBox Height="40" Background="{DynamicResource PrimaryMidForegroundBrush}"  materialDesign:ButtonAssist.CornerRadius="10">
                                    <!--<TextBox.Template>
                                        <ControlTemplate TargetType="{x:Type TextBox}">
                                            <Grid>-->
                                                <!--<Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <materialDesign:PackIcon Kind="Magnify" 
                                                   Background="Transparent"
                                                   Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"
                                                   Height="29" Width="29" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                           
                                        </Grid>
                                        </ControlTemplate>
                                    </TextBox.Template>-->
                                </TextBox>
                            </StackPanel>
                            <DockPanel Grid.Row="1">
                                <WrapPanel DockPanel.Dock="Left" VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Grid Margin="10 0">
                                        <Button Height="45"
                                    materialDesign:ButtonAssist.CornerRadius="10"
                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="Transparent" Foreground="{DynamicResource SecondaryHueMidForegroundBrush}"
                                    ToolTip="MaterialDesignRaisedButton with Round Corners">
                                            <TextBlock TextWrapping="Wrap"
                                            Text="Số phòng đã thuê 10/10" />
                                        </Button>
                                    </Grid>
                                    <Grid Margin="10 0" >
                                        <Button Height="45"
                                    materialDesign:ButtonAssist.CornerRadius="10"
                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="Transparent" Foreground="{DynamicResource SecondaryHueMidForegroundBrush}"
                                    ToolTip="MaterialDesignRaisedButton with Round Corners">
                                            <TextBlock TextWrapping="Wrap"
                                            Text="Số phòng đã thuê 10/10" />
                                        </Button>
                                    </Grid>
                                    <Grid Margin="10 0">
                                        <Button Height="45"
                                    materialDesign:ButtonAssist.CornerRadius="10"
                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="Transparent" Foreground="{DynamicResource SecondaryHueMidForegroundBrush}"
                                    ToolTip="MaterialDesignRaisedButton with Round Corners">
                                            <TextBlock TextWrapping="Wrap"
                                            Text="Số phòng đã thuê 10/10" />
                                        </Button>
                                    </Grid>
                                </WrapPanel>
                                <Grid Margin="10 0" DockPanel.Dock="Right">
                                    <Button Height="45"
                                    materialDesign:ButtonAssist.CornerRadius="10"
                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="{DynamicResource PrimaryDarkForegroundBrush}" Foreground="{DynamicResource SecondaryHueMidForegroundBrush}"
                                    ToolTip="MaterialDesignRaisedButton with Round Corners">
                                        <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource PrimaryMidBrush}"
                                            Text="Thêm phòng" />
                                    </Button>
                                </Grid>
                            </DockPanel>
                            
                            <StackPanel Grid.Row="2" Margin="10">
                                <ListView ItemsSource="{Binding Source=
                                     {x:Static GridView.GridViewScrollViewerStyleKey}}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>


                                    <ListView.View>

                                        <GridView AllowsColumnReorder="true"  >
                                            <GridView.ColumnHeaderContainerStyle>
                                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                                    <Setter Property="Height" Value="40"></Setter>
                                                    <Setter Property="Background" Value="Gray"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter Property="FontSize" Value="15"></Setter>
                                                    <Setter Property="FontWeight" Value="Bold"></Setter>
                                                </Style>
                                            </GridView.ColumnHeaderContainerStyle>
                                            <GridViewColumn  Header="First Name" />
                                            <GridViewColumn>
                                                <GridViewColumnHeader>Last Name
                                                    <!--<GridViewColumnHeader.ContextMenu>
                                                        <ContextMenu  MenuItem.Click="LastNameCM_Click"      >
                                                            <MenuItem Header="Ascending" />
                                                            <MenuItem Header="Descending" />
                                                        </ContextMenu>
                                                    </GridViewColumnHeader.ContextMenu>-->
                                                </GridViewColumnHeader>
                                            </GridViewColumn>

                                            <GridViewColumn Header="Employee No." />
                                            <!--DisplayMemberBinding=
                                                     "{Binding Path=EmployeeNumber}"-->
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                                
                            </StackPanel>
                            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
                               
                                <Button Margin="3" Width="30" Height="30"
                                  Background="{DynamicResource PrimaryCardForegroundBrush}"
                                  Foreground="{DynamicResource PrimaryMidBrush}"
                                  IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                  Style="{StaticResource MaterialDesignIconButton}"
                                  ToolTip="MaterialDesignIconButton">
                                    <TextBlock>1</TextBlock>

                                </Button>
                                <Button Margin="3" Height="30" Width="30"
                                  Background="Transparent"
                                        Foreground="{DynamicResource SecondaryHueMidForegroundBrush}"
                                  IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                  Style="{StaticResource MaterialDesignIconButton}"
                                  ToolTip="MaterialDesignIconButton">
                                    <TextBlock>2</TextBlock>
                                </Button>
                                <Button Margin="3" Height="30" Width="30"
                                  Background="Transparent"
                                        Foreground="{DynamicResource SecondaryHueMidForegroundBrush}"
                                  IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                  Style="{StaticResource MaterialDesignIconButton}"
                                  ToolTip="MaterialDesignIconButton">
                                    <TextBlock>3</TextBlock>
                                </Button>
                                <Button Margin="3" Height="30" Width="30"
                                  Background="Transparent"
                                        Foreground="{DynamicResource SecondaryHueMidForegroundBrush}"
                                  IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                  Style="{StaticResource MaterialDesignIconButton}"
                                  ToolTip="MaterialDesignIconButton">
                                    <TextBlock>...</TextBlock>
                                </Button>
                                <Button Margin="3" Height="30" Width="30"
                                  Background="Transparent"
                                        Foreground="{DynamicResource SecondaryHueMidForegroundBrush}"
                                  IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                  Style="{StaticResource MaterialDesignIconButton}"
                                  ToolTip="MaterialDesignIconButton">
                                    <TextBlock>10</TextBlock>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                <TabItem
      Header="TAB 2">
                    <TextBlock
        Margin="8"
        Text="Left placement" />
                </TabItem>
                <TabItem
      Header="TAB 3 Diff Width">
                    <TextBlock
        Margin="8"
        Text="Tab 3 with different width" />
                </TabItem>
                <TabItem
      Header="TAB 4 Looong">
                    <TextBlock
        Margin="8"
        Text="Tab 4 with long width" />
                </TabItem>
                <TabItem
      Header="TABB 5">
                    <TextBlock
        Margin="8"
        Text="Left placement tabb 5" />
                </TabItem>
                   
                </TabControl>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
