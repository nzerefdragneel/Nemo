<Window x:Class="Nemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:local="clr-namespace:Nemo"
        xmlns:modelChart="clr-namespace:Nemo.DTO"
        mc:Ignorable="d"
        xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
         TextElement.Foreground="{DynamicResource TextBrush}"
         TextElement.FontWeight="Regular"
         TextElement.FontSize="13"
         TextOptions.TextFormattingMode="Ideal"
         TextOptions.TextRenderingMode="Auto"
          materialDesign:ButtonAssist.CornerRadius="50"
        
         Background="{DynamicResource PrimaryHueMidForegroundBrush}"
         Foreground="{DynamicResource PrimaryMidBrush}"
         FontFamily="{DynamicResource MaterialDesignFont}"
         Title="Media Player" Height="650" Width="1200"
        Loaded="Window_Loaded" Closed="Window_Closed">
    <Window.DataContext>
        <modelChart:ViewModelChart/>
    </Window.DataContext>
    <Window.Resources>

    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="123*"></ColumnDefinition>
            <ColumnDefinition Width="277*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50px"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel Grid.ColumnSpan="2" Grid.Row="0" Background="{DynamicResource PrimaryLightBrush}">
            <TextBlock
              Style="{DynamicResource MaterialDesignHeadline5TextBlock}" VerticalAlignment="Center" Margin="28 0 0 0"
              Text="nemo" />
            
            <StackPanel  VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 30 0">
                
                <Button x:Name="MenuButton" Background="Transparent" BorderBrush="Transparent" Click="MenuButton_Click" Padding="0" Height="50" UseLayoutRounding="True">
                    <StackPanel Orientation="Horizontal" >
                        <materialDesign:PackIcon Width="34" Height="34" Kind="AccountCircleOutline"/>
                    <TextBlock FontSize="18" VerticalAlignment="Center" Margin="10 0">Admin</TextBlock>
                    <materialDesign:PackIcon Kind="MenuDown" Width="20" Height="20" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                
                <Popup x:Name="PopupMenu" PlacementTarget="{Binding ElementName=MenuButton}" IsOpen="False" StaysOpen="False">
                    <Border CornerRadius="2">
                        <StackPanel Background="#555555">
                            <Button Background="Transparent" BorderBrush="Transparent"   Padding="0" UseLayoutRounding="True">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Logout" Width="20" Height="20" VerticalAlignment="Center" />
                                    <TextBlock Margin="10 0 0 0" VerticalAlignment="Center">Đăng xuất</TextBlock>
                                </StackPanel>
                            </Button>
                            <Button Background="Transparent" BorderBrush="Transparent" Padding="10 0" UseLayoutRounding="True">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FormTextboxPassword" Width="20" Height="20" VerticalAlignment="Center" />
                                    <TextBlock Margin="10 0 0 0" VerticalAlignment="Center">Đổi mật khẩu</TextBlock>

                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>
                </Popup>
            </StackPanel>
        </DockPanel>
        <materialDesign:Card Grid.ColumnSpan="2" Grid.Row="1" Background="{DynamicResource PrimaryLightForegroundBrush}">
            <Grid>
                <TabControl 
                    TabStripPlacement="Left" 
                    >
                    <TabControl.Resources>
                        <Style TargetType="TabItem" x:Key="NavigationItemStyle">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border Name="Border" CornerRadius="10" Height="40" Width="180">
                                            <ContentPresenter Name="ContentPresenter" ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,10,0" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#A2E2F8" />
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#E0E0E0" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>
                    <TabItem Width="200" Height="65" Foreground="{DynamicResource PrimaryLightBrush}" Style="{StaticResource NavigationItemStyle}">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal" Width="160">
                                <materialDesign:PackIcon Kind="HomeVariantOutline"  Width="28" Height="30" Margin="0 0 10 0" VerticalAlignment="Center" />
                                <TextBlock Text="Danh mục phòng" FontSize="16" VerticalAlignment="Center" />
                            </StackPanel>
                        </TabItem.Header>

                        <!--Content-->
                        <Grid  Background="{DynamicResource PrimaryHueMidForegroundBrush}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="70"></RowDefinition>
                                <RowDefinition Height="50"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="60"></RowDefinition>
                            </Grid.RowDefinitions>
                            <StackPanel Margin="100 20 100 0"  >
                                <Border BorderThickness="1" BorderBrush="Gray">
                                    <Border.CornerRadius >
                                        <CornerRadius BottomLeft="15" BottomRight="15" TopLeft="15" TopRight="15"/>
                                    </Border.CornerRadius>
                                    <DockPanel>
                                        <materialDesign:PackIcon Kind="Magnify" DockPanel.Dock="Left"
                                                   Background="Transparent"
                                                   Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"
                                                   Height="29" Width="29" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <TextBox Height="40" Background="{DynamicResource PrimaryMidForegroundBrush}" Foreground="Black" Width="Auto" Margin="0 0 20 0"
                                            VerticalAlignment="Bottom" FontSize="20" 
                                              materialDesign:HintAssist.Hint="Tìm kiếm">
                                        </TextBox>
                                    </DockPanel>
                                </Border>
                            </StackPanel>
                            <DockPanel Grid.Row="1">
                                <WrapPanel DockPanel.Dock="Left" VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Grid Margin="10 0">
                                        <Button Height="45"
                                    materialDesign:ButtonAssist.CornerRadius="10"
                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="Transparent" Foreground="{DynamicResource SecondaryHueMidForegroundBrush}"
                                    ToolTip="MaterialDesignRaisedButton with Round Corners">
                                            <TextBlock TextWrapping="Wrap"
                                            Text="Số phòng đã thuê 10/10" />
                                        </Button>
                                    </Grid>
                                    <Grid Margin="10 0" >
                                        <Button Height="45"
                                    materialDesign:ButtonAssist.CornerRadius="10"
                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="Transparent" Foreground="{DynamicResource SecondaryHueMidForegroundBrush}"
                                    ToolTip="MaterialDesignRaisedButton with Round Corners">
                                            <TextBlock TextWrapping="Wrap"
                                            Text="Số phòng đã thuê 10/10" />
                                        </Button>
                                    </Grid>
                                    <Grid Margin="10 0">
                                        <Button Height="45"
                                    materialDesign:ButtonAssist.CornerRadius="10"
                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="Transparent" Foreground="{DynamicResource SecondaryHueMidForegroundBrush}"
                                    ToolTip="MaterialDesignRaisedButton with Round Corners">
                                            <TextBlock TextWrapping="Wrap"
                                            Text="Số phòng đã thuê 10/10" />
                                        </Button>
                                    </Grid>
                                </WrapPanel>
                                <Grid Margin="10 0" DockPanel.Dock="Right">
                                    <Button Height="45"
                                    materialDesign:ButtonAssist.CornerRadius="10"
                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="{DynamicResource PrimaryDarkForegroundBrush}" Foreground="{DynamicResource SecondaryHueMidForegroundBrush}"
                                    ToolTip="MaterialDesignRaisedButton with Round Corners">
                                        <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource PrimaryMidBrush}"
                                            Text="Thêm phòng" />
                                    </Button>
                                </Grid>
                            </DockPanel>

                            <StackPanel Grid.Row="2" Margin="10">
                                <ListView ItemsSource="{Binding Source=
                                     {x:Static GridView.GridViewScrollViewerStyleKey}}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                    <ListView.View>
                                        <GridView AllowsColumnReorder="true"  >
                                            <GridView.ColumnHeaderContainerStyle>
                                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                                    <Setter Property="Height" Value="40"></Setter>
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Setter Property="FontSize" Value="15"></Setter>
                                                    <Setter Property="FontWeight" Value="Bold"></Setter>
                                                    <Setter Property="Margin" Value=" 0"></Setter>
                                                    <Setter Property="Width" Value="Auto"/>
                                                    <Setter Property="Padding" Value="0"/>
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                </Style>
                                            </GridView.ColumnHeaderContainerStyle>

                                            <GridViewColumn  Header="Tùy chọn" Width="150">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Grid  Width="{StaticResource GridWidth}">
                                                                <Button
                                                    Height="{StaticResource ButtonHeight}"
                                                    materialDesign:ButtonAssist.CornerRadius="5"
                                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                                    Style="{StaticResource MaterialDesignRaisedLightButton}"
                                                    ToolTip="MaterialDesignRaisedLightButton with Round Corners">
                                                                    <TextBlock
                                                            Text="BTN" />
                                                                </Button>
                                                            </Grid>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="200">
                                                <GridViewColumnHeader>Mã phòng
                                                    <!--<GridViewColumnHeader.ContextMenu>
                                                        <ContextMenu  MenuItem.Click="LastNameCM_Click"      >
                                                            <MenuItem Header="Ascending" />
                                                            <MenuItem Header="Descending" />
                                                        </ContextMenu>
                                                    </GridViewColumnHeader.ContextMenu>-->
                                                </GridViewColumnHeader>
                                            </GridViewColumn>

                                            <GridViewColumn Header="Tình trạng" Width="150" >
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Grid>
                                                                <Button
                                                    Height="{StaticResource ButtonHeight}"
                                                    materialDesign:ButtonAssist.CornerRadius="5"
                                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                                    Style="{StaticResource MaterialDesignRaisedLightButton}"  >
                                                                    <TextBlock
                                                                    Text="BTN" />
                                                                </Button>
                                                            </Grid>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <!--DisplayMemberBinding=
                                                     "{Binding Path=EmployeeNumber}"-->
                                            <GridViewColumn Header="Loại phòng" Width="150"/>
                                            <GridViewColumn Header="Số lượng" Width="200"/>
                                            <GridViewColumn Header="Giá" Width="100"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>

                            </StackPanel>
                            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">

                                <Button Margin="3" Width="30" Height="30"
                                  Background="{DynamicResource PrimaryCardForegroundBrush}"
                                  Foreground="{DynamicResource PrimaryMidBrush}"
                                  IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                  Style="{StaticResource MaterialDesignIconButton}"
                                  ToolTip="MaterialDesignIconButton">
                                    <TextBlock>1</TextBlock>

                                </Button>
                                <Button Margin="3" Height="30" Width="30"
                                  Background="Transparent"
                                        Foreground="{DynamicResource SecondaryHueMidForegroundBrush}"
                                  IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                  Style="{StaticResource MaterialDesignIconButton}"
                                  ToolTip="MaterialDesignIconButton">
                                    <TextBlock>2</TextBlock>
                                </Button>
                                <Button Margin="3" Height="30" Width="30"
                                  Background="Transparent"
                                        Foreground="{DynamicResource SecondaryHueMidForegroundBrush}"
                                  IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                  Style="{StaticResource MaterialDesignIconButton}"
                                  ToolTip="MaterialDesignIconButton">
                                    <TextBlock>3</TextBlock>
                                </Button>
                                <Button Margin="3" Height="30" Width="30"
                                  Background="Transparent"
                                        Foreground="{DynamicResource SecondaryHueMidForegroundBrush}"
                                  IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                  Style="{StaticResource MaterialDesignIconButton}"
                                  ToolTip="MaterialDesignIconButton">
                                    <TextBlock>...</TextBlock>
                                </Button>
                                <Button Margin="3" Height="30" Width="30"
                                  Background="Transparent"
                                        Foreground="{DynamicResource SecondaryHueMidForegroundBrush}"
                                  IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                  Style="{StaticResource MaterialDesignIconButton}"
                                  ToolTip="MaterialDesignIconButton">
                                    <TextBlock>10</TextBlock>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                    <TabItem Foreground="{DynamicResource PrimaryLightBrush}" Style="{StaticResource NavigationItemStyle}" Height="65">
                        <TabItem.Header>
                            <StackPanel  Orientation="Horizontal" Width="160">

                                <materialDesign:PackIcon Kind="FolderHomeOutline" Width="28" Height="30" Margin="0 0 10 0" VerticalAlignment="Center" />
                                <TextBlock Text="Thuê Phòng" FontSize="16" VerticalAlignment="Center" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid>
                            <!--Thuê phòng-->
                        </Grid>
                    </TabItem>
                    <TabItem Foreground="{DynamicResource PrimaryLightBrush}" Height="65" Style="{StaticResource NavigationItemStyle}">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal" Width="160">
                                <materialDesign:PackIcon Kind="ReceiptTextOutline" Width="28" Height="30" Margin="0 0 10 0" VerticalAlignment="Center" />
                                <TextBlock Text="Hóa Đơn" FontSize="16" VerticalAlignment="Center" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid>
                            <!--Hóa đơn-->
                        </Grid>
                    </TabItem>
                    <TabItem Foreground="{DynamicResource PrimaryLightBrush}" Height="65" Style="{StaticResource NavigationItemStyle}">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal" Width="160">
                                <materialDesign:PackIcon Kind="ChartBox" Width="28" Height="30" Margin="0 0 10 0" VerticalAlignment="Center" />
                                <TextBlock Text="Báo Cáo" FontSize="16" VerticalAlignment="Center" />
                            </StackPanel>
                        </TabItem.Header>
                        <!--báo cáo-->
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <TabControl
                                    HorizontalContentAlignment="Center"
                                     Width="1000"
                                     materialDesign:ColorZoneAssist.Mode="Custom"
                                     materialDesign:ColorZoneAssist.Foreground="#003D69"
                                    Style="{StaticResource MaterialDesignFilledTabControl}">
                                    <TabItem 
                                     Header="Doanh Thu">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="57*"/>
                                                <ColumnDefinition Width="43*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="4.5*"></RowDefinition>
                                                <RowDefinition Height="5.5*"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid  Grid.Row="0" Grid.ColumnSpan="2" >
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" HorizontalAlignment="Left">
                                                    <StackPanel Orientation="Horizontal">
                                                        <ComboBox
                                                      Background="#F1F1F1"
                                                      Foreground="#003D69"
                                                      HorizontalAlignment="Left"
                                                      Margin="10"
                                                      Width="100"
                                                      Height="35"
                                                      FontSize="14"
                                                      BorderThickness="0"
                                                      Padding="10 0"
                                                      materialDesign:HintAssist.Hint="Tháng"
                                                      Style="{StaticResource MaterialDesignOutlinedComboBox}" SelectionChanged="ComboBox_SelectionChanged">
                                                            <ComboBoxItem
                                                        Content="1" />
                                                            <ComboBoxItem
                                                        Content="2" />
                                                            <ComboBoxItem
                                                        Content="3" />
                                                        </ComboBox>
                                                        <ComboBox
                                                      Background="#F1F1F1"
                                                      Foreground="#003D69"
                                                      HorizontalAlignment="Left"
                                                      BorderThickness="0"
                                                      Margin="10"
                                                      Width="100"
                                                      Height="35"
                                                      FontSize="14"
                                                      Padding="10 0"
                                                      materialDesign:HintAssist.Hint="Năm"
                                                      Style="{StaticResource MaterialDesignOutlinedComboBox}" SelectionChanged="ComboBox_SelectionChanged">
                                                            <ComboBoxItem
                                                        Content="2021" />
                                                            <ComboBoxItem
                                                        Content="2022" />
                                                            <ComboBoxItem
                                                        Content="2023" />
                                                        </ComboBox>
                                                    </StackPanel>
                                                    <Border Margin="10 0" CornerRadius="10" BorderThickness="2" BorderBrush="#4A8DB7" Padding="5 0">
                                                        <StackPanel>
                                                            <StackPanel Margin="10" Orientation="Horizontal">
                                                                <TextBlock FontSize="18" Foreground="Black">Loai phong A</TextBlock>
                                                                <TextBlock Margin="100 0 0 0" FontSize="18" Foreground="Black">2000000</TextBlock>
                                                            </StackPanel>
                                                            <StackPanel Margin="10" Orientation="Horizontal">
                                                                <TextBlock FontSize="18" Foreground="Black">Loai phong A</TextBlock>
                                                                <TextBlock Margin="100 0 0 0" FontSize="18" Foreground="Black">2000000</TextBlock>
                                                            </StackPanel>
                                                            <StackPanel Margin="10" Orientation="Horizontal">
                                                                <TextBlock FontSize="18" Foreground="Black">Loai phong A</TextBlock>
                                                                <TextBlock Margin="100 0 0 0" FontSize="18" Foreground="Black">2000000</TextBlock>
                                                            </StackPanel>
                                                            <StackPanel Margin="10" Orientation="Horizontal">
                                                                <TextBlock FontSize="18" Foreground="Black">Loai phong A</TextBlock>
                                                                <TextBlock Margin="100 0 0 0" FontSize="18" Foreground="Black">2000000</TextBlock>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Border>
                                                </StackPanel>
                                                <Grid Grid.Column="1">
                                                    <lvc:PieChart
                                                Series="{Binding DoanhThuThang}"
                                
                                                LegendPosition="Right"  Grid.RowSpan="3" Margin="0,0,38,0">
                                                    </lvc:PieChart>
                                                </Grid>
                                            </Grid>

                                            <StackPanel Orientation="Vertical" Grid.ColumnSpan="2" Margin="0,241,0,0" Grid.RowSpan="2" >
                                                <ComboBox 
                                              Background="#F1F1F1"
                                              Foreground="#003D69"
                                              HorizontalAlignment="Left"
                                              Margin="10 0"
                                              Width="200"
                                              Height="35"
                                              BorderThickness="0"
                                              FontSize="14"
                                              Padding="10 0"
                                              materialDesign:HintAssist.Hint="Năm"
                                              Style="{StaticResource MaterialDesignOutlinedComboBox}" SelectionChanged="ComboBox_SelectionChanged">
                                                    <ComboBoxItem
                                                Content="2021" />
                                                    <ComboBoxItem
                                                Content="2022" />
                                                    <ComboBoxItem
                                                Content="2023" />
                                                </ComboBox>
                                            </StackPanel>
                                            <Grid  Grid.Row="1" Margin="10 35 0 0" Grid.ColumnSpan="2">
                                                <lvc:CartesianChart
                                                Series="{Binding DoanhThuNam}"
                                                XAxes="{Binding XAxes}"
                                                LegendPosition="Right" >
                                                </lvc:CartesianChart>
                                            </Grid>
                                        </Grid>
                                    </TabItem>
                                    <TabItem
                                            Header="Mật độ sử dụng phòng">
                                        <!--Mat do -->
                                        <StackPanel HorizontalAlignment="Center" Width="999">
                                            <StackPanel Orientation="Horizontal">
                                                <ComboBox
                                                      Background="#F1F1F1"
                                                      Foreground="#003D69"
                                                      HorizontalAlignment="Left"
                                                      Margin="10"
                                                      Width="100"
                                                      Height="35"
                                                      FontSize="14"
                                                      BorderThickness="0"
                                                      Padding="10 0"
                                                      materialDesign:HintAssist.Hint="Tháng"
                                                      Style="{StaticResource MaterialDesignOutlinedComboBox}" SelectionChanged="ComboBox_SelectionChanged">
                                                    <ComboBoxItem
                                                        Content="1" />
                                                    <ComboBoxItem
                                                        Content="2" />
                                                    <ComboBoxItem
                                                        Content="3" />
                                                </ComboBox>
                                                <ComboBox
                                                      Background="#F1F1F1"
                                                      Foreground="#003D69"
                                                      HorizontalAlignment="Left"
                                                      BorderThickness="0"
                                                      Margin="10"
                                                      Width="100"
                                                      Height="35"
                                                      FontSize="14"
                                                      Padding="10 0"
                                                      materialDesign:HintAssist.Hint="Năm"
                                                      Style="{StaticResource MaterialDesignOutlinedComboBox}" SelectionChanged="ComboBox_SelectionChanged">
                                                    <ComboBoxItem
                                                        Content="2021" />
                                                    <ComboBoxItem
                                                        Content="2022" />
                                                    <ComboBoxItem
                                                        Content="2023" />
                                                </ComboBox>

                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <ComboBox
                                                      Background="#F1F1F1"
                                                      Foreground="#003D69"
                                                      HorizontalAlignment="Left"
                                                      Margin="10"
                                                      Width="220"
                                                      Height="35"
                                                      FontSize="14"
                                                      BorderThickness="0"
                                                      Padding="10 0"
                                                      materialDesign:HintAssist.Hint="Phòng"
                                                      Style="{StaticResource MaterialDesignOutlinedComboBox}" SelectionChanged="ComboBox_SelectionChanged">
                                                    <ComboBoxItem
                                                        Content="101" />
                                                    <ComboBoxItem
                                                        Content="201" />
                                                    <ComboBoxItem
                                                        Content="303" />
                                                </ComboBox>
                                                <Border Margin="180 0 0 0" CornerRadius="10" BorderThickness="2" BorderBrush="#4A8DB7">
                                                    <StackPanel Height="43">
                                                        <StackPanel Margin="10" Orientation="Horizontal">
                                                            <TextBlock FontSize="18" Foreground="Black">Số ngày cho thuê</TextBlock>
                                                            <TextBlock Margin="100 0 0 0" FontSize="18" Foreground="Black">20 ngày</TextBlock>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>
                                            <StackPanel Margin="10 20" HorizontalAlignment="left">
                                                <ScrollViewer  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                                    <DataGrid x:Name="dataGrid" Background="#F1F1F1" FontSize="15"
                                                        AutoGenerateColumns="False">
                                                        <DataGrid.Resources>
                                                            <Style TargetType="DataGridColumnHeader">
                                                                <Setter Property="Background" Value="#F1F1F1" />
                                                                <Setter Property="Foreground" Value="#003D69" />
                                                                <Setter Property="Margin" Value="10" />

                                                            </Style>
                                                        </DataGrid.Resources>
                                                        <DataGrid.Columns >
                                                            <DataGridTextColumn Header="Phòng" Binding="{Binding Room}" />
                                                            <DataGridTextColumn Header="Loại" Binding="{Binding Type}" />
                                                            <DataGridTextColumn Header="Số ngày cho thuê trong tháng" Binding="{Binding NumberOfDays}" />
                                                        </DataGrid.Columns>
                                                    </DataGrid>
                                                </ScrollViewer>
                                            </StackPanel>
                                        </StackPanel>
                                    </TabItem>
                                </TabControl>
                            </StackPanel>

                        </Grid>
                    </TabItem>
                    <TabItem Foreground="{DynamicResource PrimaryLightBrush}" Style="{StaticResource NavigationItemStyle}" Height="65">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal" Width="160">
                                <materialDesign:PackIcon Kind="AlertCircleOutline" Width="28" Height="30" Margin="0 0 10 0" VerticalAlignment="Center" />
                                <TextBlock Text="Quy Định" FontSize="16" VerticalAlignment="Center" />
                            </StackPanel>
                        </TabItem.Header>
                        <!--Qui định-->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="8*" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Margin="60 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="5*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" FontSize="50" VerticalAlignment="Center" FontWeight="SemiBold" FontFamily="Semi Bold" Foreground="{DynamicResource PrimaryLightBrush}">QUY ĐỊNH</TextBlock>
                                <Border Grid.Column="2" CornerRadius="20" BorderBrush="#555555" BorderThickness="1" Height="80"  FlowDirection="RightToLeft">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
